-- ✅ Ngăn chạy nhiều lần
if _G.ScriptAlreadyRunning then return end
_G.ScriptAlreadyRunning = true

-- ✅ Cấu hình
local VALID_PLACE_ID = 126884695634066
local TeleportService = game:GetService("TeleportService")
local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local LocalPlayer = Players.LocalPlayer

-- ✅ Hàm tìm server public phù hợp
local function findPublicServer()
    local cursor = ""
    local url = ("https://games.roblox.com/v1/games/%d/servers/Public?sortOrder=Asc&limit=100"):format(VALID_PLACE_ID)

    while true do
        local finalUrl = url .. (cursor ~= "" and "&cursor=" .. cursor or "")
        local success, result = pcall(function()
            return HttpService:JSONDecode(game:HttpGet(finalUrl))
        end)

        if success and result and result.data then
            for _, server in ipairs(result.data) do
                if server.playing <= 5 and server.id ~= game.JobId then
                    return server.id
                end
            end
            if result.nextPageCursor then
                cursor = result.nextPageCursor
            else
                break
            end
        else
            break
        end
    end

    return nil
end

-- ✅ Kiểm tra nếu KHÔNG thỏa một trong các điều kiện
local function notValidConditions()
    if game.PlaceId ~= VALID_PLACE_ID then return true end
    if game.PrivateServerId ~= "" and game.PrivateServerOwnerId ~= 0 then return true end
    if #Players:GetPlayers() > 5 then return true end
    return false
end

-- ✅ Nếu điều kiện hiện tại chưa hợp lệ → chuyển server
if notValidConditions() then
    warn("Server does not meet requirements - switching...")
    local newServer = findPublicServer()
    if newServer then
        TeleportService:TeleportToPlaceInstance(VALID_PLACE_ID, newServer, LocalPlayer)
    else
        LocalPlayer:Kick("No valid server found.")
    end
    return -- ❌ Không chạy script chính ở server sai
end

-- ✅ Nếu đã thỏa tất cả điều kiện → chạy script chính
print("✅ Valid server detected - running main script")

local success, err = pcall(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/namnnni2/GrowaGarden/refs/heads/main/NoLagHub"))()
end)
if not success then
    warn("Failed to load main script:", err)
end
